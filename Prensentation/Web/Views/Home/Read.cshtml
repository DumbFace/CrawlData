@model ComicViewModel


<div class="container">
    <div class="row justify-content-center mb-3">
        <h1>
            <a href="/@Model.Url">
                @Model.Title
            </a>
        </h1>
    </div>
    <div class="row justify-content-center mb-3">
        <h2 class="text-align-center">@Model.Title - Chap @Model.Chap</h2>
    </div>
    <div class="row">
        <div class="content" id="content">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>